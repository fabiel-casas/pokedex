<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/red_pokedex</item>
    <item name="colorPrimaryDark">@color/red_dark_pokedex</item>
    <item name="colorAccent">@color/red_pokedex</item>
  </style>
  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>
  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="PokemonDetailText">
    <item name="android:layout_marginLeft">@dimen/spacing_high</item>
    <item name="android:layout_marginRight">@dimen/spacing_high</item>
  </style>

</resources>
